{
  "manifest_version": 3,
  "name": "Smarter Assistant",
  "version": "1.0",
  "description": "AI-powered assistant for web pages",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "cookies",
    "scripting"
  ],
  "host_permissions": [
    "https://smarter-865bc5a924ea.herokuapp.com/*",
    "https://github.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 