{
  "manifest_version": 3,
  "name": "Smarter",
  "version": "1.0",
  "description": "Add Smarter to any webpage",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_title": "Smarter"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 